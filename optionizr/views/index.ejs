<!doctype html>
<html lang="en">
<head>
    <% include shared/header %>
    <script>
    $('#my-element').data('datepicker')
    </script>

<style media="screen">
body {
  /* Margin bottom by footer height */
  background-size: 100%;
  background: url("img/image3.jpg");
  background-repeat: no-repeat;
  background-size: 100% 100%;
}
</style>

</head>
<body>
    <!-- <img src="img/90H.jpg" alt=""> -->
    <% include shared/nav %>
    <!-- main container -->
    <div class="container">
        <!-- page header -->
        <div class="page-header">
            <h1> Air Berlin flight list</h1>
        </div>
        <!-- end page header -->

        <% if(locals.error) { %> <!-- -->
        <!-- error -->
        <div class="row">
            <div class="col-md-10 col-sm-10 col-xs-12 col-md-offset-1 col-sm-offset-1 col-xs-offset-0">
                <div class="alert alert-danger">
                    <strong>Erreur : </strong> <%- error %>
                </div>
            </div>
        </div>
        <!-- end error -->
        <% } %>

        <% if(locals.success) { %>
        <!-- error -->
        <div class="row">
            <div class="col-md-10 col-sm-10 col-xs-12 col-md-offset-1 col-sm-offset-1 col-xs-offset-0">
                <div class="alert alert-success">
                    <strong>BRAVO : </strong> C'est maintenant a vous de jouer !! :) %>
                </div>
            </div>
        </div>
        <!-- end error -->
        <% } %>

        <form action="/demo" method="post">
            <!-- field list row -->
            <div class="row center-block">
                <!-- field list col -->
                <div class="col-md-5">
                    <div class="form-group">
                        <label class="form-label" for="from" required>Departure</label>
                        <select class="select" id="from" name="from">
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="to" required>Destination</label>
                        <select class="select" id="to" name="to">
                        </select>
                    </div>
                    <label class="form-label" for="number">Passenger number</label>
                    <div class="row">
                        <div class="form-group col-xs-3">
                            <select class="form-control" id="number" name="number">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                                <option value="6">6</option>
                                <option value="7">7</option>
                                <option value="8">8</option>
                                <option value="9">9</option>
                            </select>
                            <!-- <label class="form-label" for="passenger_type">Passenger type</label> -->
                            <!-- <select class="form-control" id="passenger_type" name="passenger_type"> -->
                            <span>Adult</span>
                        </div>
                        <div class="form-group col-xs-3">
                            <!-- <label class="form-label" for="number">Passenger number</label> -->
                            <select class="form-control" id="young_number" name="young_number">
                                <option value="0">0</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                                <option value="6">6</option>
                                <option value="7">7</option>
                                <option value="8">8</option>
                                <option value="9">9</option>
                            </select>
                            <!-- <label class="form-label" for="passenger_type">Passenger type</label> -->
                            <!-- <select class="form-control" id="passenger_type" name="passenger_type"> -->
                            <!-- <option value="ADT">Jeune</option> -->
                            <span>Young</span>
                        </div>
                        <div class="form-group col-xs-3">
                            <!-- <label class="form-label" for="number"></label> -->
                            <select class="form-control" id="child_number" name="child_number">
                                <option value="0">0</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                                <option value="6">6</option>
                                <option value="7">7</option>
                                <option value="8">8</option>
                                <option value="9">9</option>
                            </select>
                            <!-- <label class="form-label" for="passenger_type"></label> -->
                            <span>Child</span>
                        </div>
                        <div class="form-group col-xs-3">
                            <label class="form-label" for="type">Travel type</label>
                            <div class="checkbox disabled">
                                <label><input type="checkbox" checked disabled> One way</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <input type='text' class="form-control datepicker-here" data-position="right top"
                            data-language='en' placeholder="DD/MM/YYYY" id="date" name="date" required/>
                        </div>
                    </div>
                    <div class="form-group">
                        <br/>
                        <button class="btn btn-primary btn-lg" type="submit">Submit</button>
                    </div>
                </div>
            </div>
        </form>
        <% include shared/footer %>
    </body>
    </html>
