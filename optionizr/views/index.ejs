<!doctype html>
<html lang="en">
<head>
	<% include shared/header %>
	<script>
		$('#my-element').data('datepicker')
	</script>
</head>
<body>
		<!-- <img src="img/90H.jpg" alt=""> -->
	<% include shared/nav %>
	<!-- main container -->
	<div class="container">
		<!-- page header -->
		<div class="page-header">
			<h1> Air Berlin flight list</h1>
		</div>
		<!-- end page header -->

		<% if(locals.error) { %>
		<!-- error -->
		<div class="row">
			<div class="col-md-10 col-sm-10 col-xs-12 col-md-offset-1 col-sm-offset-1 col-xs-offset-0">
				<div class="alert alert-danger">
					<strong>Erreur : </strong> <%- error %>
				</div>
			</div>
		</div>
		<!-- end error -->
		<% } %>


		<% if(locals.success) { %>
		<!-- error -->
		<div class="row">
			<div class="col-md-10 col-sm-10 col-xs-12 col-md-offset-1 col-sm-offset-1 col-xs-offset-0">
				<div class="alert alert-success">
					<strong>BRAVO : </strong> C'est maintenant a vous de jouer !! :) %>
				</div>
			</div>
		</div>
		<!-- end error -->
		<% } %>

		<form action="/demo" method="post">
			<!-- field list row -->
			<div class="row">
				<!-- field list col -->
				<div class="col-md-4">
					<div class="form-group">
						<label class="form-label" for="from">Departure</label>
						<select class="form-control" id="from" name="from">
						</select>
					</div>
					<div class="form-group">
						<label class="form-label" for="to">Destination</label>
						<select class="form-control" id="to" name="to">
						</select>
					</div>
					<label class="form-label" for="number">Passenger number</label>
					<div class="row">
						<div class="form-group col-md-3">
							<select class="form-control" id="number" name="number">
								<option value="1">1</option>
								<option value="2">2</option>
								<option value="3">3</option>
								<option value="4">4</option>
								<option value="5">5</option>
								<option value="6">6</option>
								<option value="7">7</option>
								<option value="8">8</option>
								<option value="9">9</option>
							</select>
							<!-- <label class="form-label" for="passenger_type">Passenger type</label> -->
							<!-- <select class="form-control" id="passenger_type" name="passenger_type"> -->
							<span>Adult</span>
						</div>
						<div class="form-group col-md-3">
							<!-- <label class="form-label" for="number">Passenger number</label> -->
							<select class="form-control" id="young_number" name="young_number">
								<option value="0">0</option>
								<option value="1">1</option>
								<option value="2">2</option>
								<option value="3">3</option>
								<option value="4">4</option>
								<option value="5">5</option>
								<option value="6">6</option>
								<option value="7">7</option>
								<option value="8">8</option>
								<option value="9">9</option>
							</select>
							<!-- <label class="form-label" for="passenger_type">Passenger type</label> -->
							<!-- <select class="form-control" id="passenger_type" name="passenger_type"> -->
							<!-- <option value="ADT">Jeune</option> -->
							<span>Young</span>
						</div>
						<div class="form-group col-md-3">
							<!-- <label class="form-label" for="number"></label> -->
							<select class="form-control" id="child_number" name="child_number">
								<option value="0">0</option>
								<option value="1">1</option>
								<option value="2">2</option>
								<option value="3">3</option>
								<option value="4">4</option>
								<option value="5">5</option>
								<option value="6">6</option>
								<option value="7">7</option>
								<option value="8">8</option>
								<option value="9">9</option>
							</select>
							<!-- <label class="form-label" for="passenger_type"></label> -->
							<span>Child</span>
						</div>
					</div>
					<div class="row">
					<input type='text' class="form-control datepicker-here" data-position="right top" data-language='en' placeholder="DD/MM/YYYY" id="date" name="date" />
					  </div>
						</div>
						<div class="form-group col-md-6">
							<label class="form-label" for="type">Travel type</label>
							<div class="checkbox">
								<label>
									<input type="checkbox" checked> Aller simple
								</label>

							</div>
						</div>
					</div>
						<div class="form-group text-center">
							<button class="btn btn-primary" type="submit">Submit</button>
						</div>
					</div>
					<!-- end field list col -->
				</div>
				<!-- end field list row -->
			</form>
		</div>
		<!-- end main container -->
		<% include shared/footer %>
	</body>
	</html>
